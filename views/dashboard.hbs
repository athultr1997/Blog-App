<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your blogs</p>

{{#if blogs}}
	<table class="striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Visibility</th>
				<th></th>
			</tr>			
		</thead>
		<tbody>
			{{#each blogs}}
				<tr>
					<td><a href="/blogs/{{_id}}"></a>{{title}}</th>
					<td>{{timeCreated}}</td>
					<td><span class="dash-status">{{visibility}}</span></td>
					<td></td>
				</tr>
			{{/each}}
		</tbody>
		
	</table>	
{{else}}
	<p>You have not created any blogs</p>
{{/if}}