<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your blogs</p>

{{#if blogs}}
	<table class="striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Visibility</th>
				<th></th>
			</tr>			
		</thead>
		<tbody>
			{{#each blogs}}
				<tr>
					<td><a href="/blogs/{{_id}}">{{title}}</a></td>
					<td>{{formatDate timeCreated 'LLLL'}}</td>
					<td><span class="dash-status">{{visibility}}</span></td>
					<td>
						<a href="/blogs/edit/{{_id}}" class="btn btn-float blue">
							<i class="fas fa-edit"></i>
						</a>

						<form action="/blogs/{{_id}}" method="POST" id="delete-form">
							<input type="hidden" name="_method" value="DELETE">
							<button type="submit" class="btn red">
								<i class="fas fa-trash"></i>
							</button>
						</form>
					</td>
				</tr>
			{{/each}}
		</tbody>
		
	</table>	
{{else}}
	<p>You have not created any blogs</p>
{{/if}}